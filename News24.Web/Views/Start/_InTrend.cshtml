@model List<News24.Web.ViewModels.StartViewModels.ArticleViewModel>
    <div>
        <a name="trend"></a>
        <div class="fh5co_heading fh5co_heading_border_bottom py-2 mb-4"><a name="trend"></a>В тренде</div>
    </div>
<div class="owl-carousel owl-theme js" id="slider1">
    @foreach (var item in Model)
    {
        <div class="item px-2">
            <div class="fh5co_latest_trading_img_position_relative">
                <div class="fh5co_latest_trading_img">
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.MainImage)" alt="@item.Head"
                         class="fh5co_img_special_relative" />
                </div>
                <div class="fh5co_latest_trading_img_position_absolute"></div>
                <div class="fh5co_latest_trading_img_position_absolute_1">
                    <a href="@Url.Action("Details", "Start", new { id = item.ArticleId})" class="text-white"> @item.Head </a>
                    <div class="fh5co_latest_trading_date_and_name_color"> @item.User.FirstName @item.User.LastName - @item.PublicationDate.ToString("D")</div>
                </div>
            </div>
        </div>
    }
   
</div>
