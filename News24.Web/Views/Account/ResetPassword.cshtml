
@model News24.Web.ViewModels.AccountViewModels.ResetPasswordViewModel
@{
    ViewBag.Title = "Сброс пароля";
}

    <div class="container mt-5  ">
        <div class="row justify-content-center">
            <div class=" col-md-4 login-form  bg-faded">
                @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <h2 class="text-center">@ViewBag.Title</h2>
                    <hr />
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Code)

                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 " })
                        <div class="col-md-12">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 " })
                        <div class="col-md-12">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 " })
                        <div class="col-md-12">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group float-right">
                        <div class=" col-md-12 ">
                            <input type="submit" class="btn btn-success" value="Сбросить" />
                        </div>
                    </div>
                }
            </div>
           
        </div>
    </div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}