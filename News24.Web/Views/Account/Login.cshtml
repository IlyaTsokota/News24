
@using News24.Web.ViewModels.AccountViewModels
@model News24.Web.ViewModels.AccountViewModels.LoginViewModel
@{
    ViewBag.Title = "Вход";
}


<div class="container mt-5  ">
    <div class="row justify-content-center">
        <div class=" col-md-4 login-form  bg-faded">
            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h2 class="text-center mt-2">Авторизация</h2>
                <hr />
                <div>
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    @Html.HiddenFor(m => m.ReturnUrl)
                    <div class="form-group mt-2">
                        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 " })
                        <div class="col-md-12">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "email@example.com", type = "email" })
                            @Html.ValidationMessageFor(m => m.Email, string.Empty, new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row ">
                            <div class="col-md-6 mr-auto">
                                @Html.LabelFor(m => m.Password, new { @class = "col-md-2 " })
                            </div>
                            <div class="col-md-6">
                                <p>
                                    <a href="@Url.Action("ForgotPassword","Account")" id="btnCreate">Забыли пароль?</a>
                                </p>

                            </div>
                        </div>
                        <div class="col-md-12">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Password, string.Empty, new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">


                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe)

                        </div>
                    </div>
                    <div class="form-group ">

                        <div class="col-md-10 mx-auto ">
                            <input type="submit" class="btn btn-success w-100" value="Войти" />
                        </div>
                    </div>


                </div>
            }
        </div>
        <div class="w-100"></div>
        <div class="col-md-4">
            <p class="text-center">Еще не зарегистрированы? <a href="@Url.Action("Register", "Account")">Зарегистрируйтесь</a></p>
        </div>
    </div>
</div>
@*Модальное окно*@
<div id='dialogDiv' class='modal fade' tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Забыли пароль?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div id='dialogContent'></div>
        </div>
    </div>
</div>




