@model News24.Web.Areas.Admin.ViewModels.TagViewModel.TagViewModel
@{
    ViewBag.Title = "Добавление тегов";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="row justify-content-md-center">
    <div class="col-md-8 ">


        <h2 class="text-center text-uppercase">@ViewBag.Title</h2>
        <hr />

        @using (Html.BeginForm("Create", "Tag", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m=>m.ArticleId)
            <div>
                @Html.ValidationSummary(true, string.Empty, new { @class = "text-danger" })
                <div class="form-group">
                    <p>@Html.LabelFor(model => model.Value, new { @class = "col" }) (Чтобы добавить несколько, перечисляйте через запятую "," )</p>
                    
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Value, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Value, string.Empty, new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <input type="submit" value="Создать" class="btn btn-primary" />
                        @Html.ActionLink("Назад", "Index", null, new { @class = "btn btn-secondary" })
                    </div>
                </div>
            </div>
        }
    </div>
</div>