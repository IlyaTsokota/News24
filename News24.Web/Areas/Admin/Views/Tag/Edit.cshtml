@model News24.Web.Areas.Admin.ViewModels.TagViewModel.TagViewModel
@{
    ViewBag.Title = "Редактирование тега";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="row justify-content-md-center">
    <div class="col-md-8 ">


        <h2 class="text-center text-uppercase">@ViewBag.Title</h2>
        <hr />

        @using (Html.BeginForm("Edit", "Tag", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, string.Empty, new { @class = "text-danger" })

            @Html.HiddenFor(m => m.ArticleId)
            @Html.HiddenFor(m => m.TagId)
            <div class="form-group">
                @Html.LabelFor(model => model.Value, new { @class = "col" })
                <div class="col-md-12">
                    @Html.EditorFor(model => model.Value, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Value, string.Empty, new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-12">
                    <input type="submit" value="Сохранить" class="btn btn-primary" />
                    @Html.ActionLink("Назад", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            </div>
        }
    </div>
</div>